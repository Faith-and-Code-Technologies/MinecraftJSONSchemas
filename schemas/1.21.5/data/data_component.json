{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Data Component",
    "oneOf": [
        {
            "type": "object",
            "title": "Attribute Modifiers",
            "description": "Applies attribute modifiers onto items.",
            "properties": {
                "minecraft:atttibute_modifiers": {
                    "type": "array",
                    "items": {
                        "title": "Attibute Modifier",
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "description": "The name of the attribute this modifier is to act upon.",
                                "title": "Type"
                            },
                            "slot": {
                                "type": "string",
                                "description": "Slot or slot type the item must be in for the modifier to take effect.",
                                "title": "Slot",
                                "enum": [
                                    "any",
                                    "hand",
                                    "armor",
                                    "mainhand",
                                    "offhand",
                                    "head",
                                    "chest",
                                    "legs",
                                    "feet",
                                    "body"
                                ],
                                "default": "any"
                            },
                            "id": {
                                "type": "string",
                                "description": "The unique resource location to identify this modifier.",
                                "title": "ID"
                            },
                            "amount": {
                                "type": "number",
                                "title": "Amount",
                                "description": "Amount of change form the modifier."
                            },
                            "operation": {
                                "type": "string",
                                "title": "Operation",
                                "description": "Modifer operation.",
                                "enum": [
                                    "add_value",
                                    "add_multiplied_base",
                                    "add_multiplied_total"
                                ]
                            }
                        },
                        "required": [
                            "type",
                            "slot",
                            "id",
                            "amount",
                            "operation"
                        ]
                    }
                }
            },
            "required": [
                "atttibute_modifiers"
            ]
        },
        {
            "type": "object",
            "title": "Banner Patterns",
            "properties": {
                "minecraft:banner_patterns": {
                    "type": "array",
                    "title": "banner_patterns",
                    "items": {
                        "type": "object",
                        "properties": {
                            "color": {
                                "type": "string",
                                "title": "Color"
                            },
                            "pattern": {
                                "title": "Pattern",
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "title": "Asset ID",
                                        "properties": {
                                            "pattern": {
                                                "type": "string",
                                                "title": "ID"
                                            }
                                        },
                                        "required": [
                                            "pattern"
                                        ]
                                    },
                                    {
                                        "type": "object",
                                        "title": "Banner Pattern Definition",
                                        "properties": {
                                            "asset_id": {
                                                "type": "string",
                                                "title": "Asset ID"
                                            },
                                            "translation_key": {
                                                "type": "string",
                                                "title": "Translation Key"
                                            }
                                        },
                                        "required": [
                                            "asset_id",
                                            "translation_key"
                                        ]
                                    }
                                ]
                            }
                        },
                        "required": [
                            "color",
                            "pattern"
                        ]
                    }
                }
            }
        },
        {
            "type": "object",
            "title": "Base Color",
            "$ref": "../utils/base_color.json"
        },
        {
            "type": "object",
            "title": "Bees",
            "properties": {
                "minecraft:bees": {
                    "type": "array",
                    "title": "Bees",
                    "items": {
                        "type": "object",
                        "properties": {
                            "entity_data": {
                                "$ref": "entity_data.json"
                            },
                            "min_ticks_in_hive": {
                                "type": "integer",
                                "title": "Min Ticks In Hive"
                            },
                            "ticks_in_hive": {
                                "type": "integer",
                                "title": "Ticks In Hive"
                            }
                        }
                    }
                }
            }
        },
        {
            "type": "object",
            "title": "Block Entity Data",
            "properties": {
                "minecraft:block_entity_data": {
                    "$ref": "block_entity_data.json"
                }
            }
        },
        {
            "type": "object",
            "title": "Block State",
            "properties": {
                "minecraft:block_state": {
                    "type": "object",
                    "properties": {
                        "block_state": {
                            "type": "object",
                            "title": "Single Block State",
                            "description": "A single block state key-value pair like {type: 'top'}",
                            "minProperties": 1,
                            "maxProperties": 1,
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "required": [
                "block_state"
            ],
            "additionalProperties": false
        },
        {
            "title": "Blocks Attacks",
            "type": "object",
            "properties": {
                "minecraft:blocks_attacks": {
                    "type": "object",
                    "properties": {
                        "block_delay_seconds": {
                            "type": "number",
                            "default": 0
                        },
                        "disable_cooldown_scale": {
                            "type": "number",
                            "default": 1
                        },
                        "damage_reductions": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "oneOf": [
                                            {
                                                "type": "string"
                                            },
                                            {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        ]
                                    },
                                    "base": {
                                        "type": "number"
                                    },
                                    "factor": {
                                        "type": "number"
                                    },
                                    "horizontal_blocking_angle": {
                                        "type": "number",
                                        "exclusiveMinimum": 0,
                                        "default": 90
                                    }
                                },
                                "required": [
                                    "base",
                                    "factor"
                                ]
                            }
                        },
                        "item_damage": {
                            "type": "object",
                            "properties": {
                                "threshold": {
                                    "type": "number"
                                },
                                "base": {
                                    "type": "number"
                                },
                                "factor": {
                                    "type": "number"
                                }
                            },
                            "required": [
                                "threshold",
                                "base",
                                "factor"
                            ]
                        },
                        "block_sound": {
                            "oneOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "object",
                                    "$ref": "../utils/sound_event.json"
                                }
                            ]
                        },
                        "disabled_sound": {
                            "oneOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "object",
                                    "$ref": "../utils/sound_event.json"
                                }
                            ]
                        },
                        "bypassed_by": {
                            "type": "string",
                            "pattern": "^#.+"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [
                "minecraft:blocks_attacks"
            ],
            "additionalProperties": false
        },
        {
            "title": "Break Sound",
            "type": "object",
            "properties": {
                "minecraft:break_sound": {
                    "type": "object",
                    "oneOf": [
                        {
                            "type": "string",
                            "title": "String",
                            "description": "A sound event ID"
                        },
                        {
                            "type": "object",
                            "title": "Object",
                            "$ref": "../utils/sound_event.json"
                        }
                    ]
                }
            }
        },
        {
            "title": "Bucket Entity Data",
            "type": "object",
            "properties": {
                "minecraft:bucket_entity_data": {
                    "type": "object",
                    "properties": {
                        "NoAI": {
                            "type": "boolean",
                            "title": "No AI",
                            "description": "Turns into NoAI entity tag for all bucketable entities."
                        },
                        "Silent": {
                            "type": "boolean",
                            "title": "Silent",
                            "description": "Turns into Silent entity tag for all bucketable entities."
                        },
                        "NoGravity": {
                            "type": "boolean",
                            "title": "No Gravity",
                            "description": "Turns into NoGravity entity tag for all bucketable entities."
                        },
                        "Glowing": {
                            "type": "boolean",
                            "title": "Glowing",
                            "description": "Turns into Glowing entity tag for all bucketable entities."
                        },
                        "Invulnerable": {
                            "type": "boolean",
                            "title": "Invulnerable",
                            "description": "Turns into Invulnerable entity tag for all bucketable entities."
                        },
                        "Health": {
                            "type": "number",
                            "title": "Health",
                            "description": "Turns into Health entity tag for all bucketable entities."
                        },
                        "Age": {
                            "type": "integer",
                            "title": "Age",
                            "description": "Turns into Age entity tag for axolotls and tadpoles."
                        },
                        "Variant": {
                            "type": "integer",
                            "title": "Variant",
                            "description": "Turns into Variant entity tag for axolotls."
                        },
                        "HuntingCooldown": {
                            "type": "integer",
                            "title": "Hunting Cooldown",
                            "description": "Turns into the expiry time of the memory module has_hunting_cooldown for axolotls."
                        },
                        "BucketVariantTag": {
                            "type": "integer",
                            "title": "Bucket Variant Tag",
                            "description": "Turns into Variant entity tag for tropical fish."
                        },
                        "type": {
                            "type": "string",
                            "title": "Type",
                            "description": "Turns into type entity tag for salmon."
                        }
                    }
                }
            }
        },
        {
            "title": "Bundle Contents",
            "type": "object",
            "properties": {
                "minecraft:bundle_contents": {
                    "type": "array",
                    "title": "Bundle Contents",
                    "description": "The items stored inside this bundle.",
                    "items": {
                        "$ref": "item_stack.json#/definitions/itemStack"
                    }
                }
            }
        }
    ]
}